{
  "name": "cpu-load-monitoring-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@redux-devtools/extension": "^3.2.2",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/canvasjs": "^1.9.7",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.24",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "ag-grid-community": "^27.0.1",
    "ag-grid-react": "^27.0.1",
    "concurrently": "^7.0.0",
    "date-fns": "^2.28.0",
    "express": "^4.17.3",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-scripts": "5.0.0",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "typescript": "^4.5.5",
    "ws": "^8.5.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "startServer": "NODE_ENV=development nodemon server/server.mjs",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "eslint": "npx eslint src/** server/**",
    "test:ut:watch": "react-scripts test",
    "test:ut": "CI=true react-scripts test",
    "test:it:dev": "npm run build && concurrently -k \"serve -l 3010 ./build\" \"npx cypress open\"",
    "test:it": "npm run build && concurrently -k \"serve -l 3010 ./build\" \"npx cypress run\"",
    "test:it:ci": "npx cypress run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "ignorePatterns": [
      "*.css"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "cypress": "^9.5.0",
    "cypress-ag-grid": "^1.2.0",
    "nodemon": "^2.0.15",
    "serve": "^13.0.2"
  }
}
